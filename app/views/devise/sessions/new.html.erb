<header class='back-image'>

</header>
<%= @user.errors.as_json %>
<%= content_for :body_class, 'index' %>
<%= content_for :body_id, 'page-top' %>

<div class="login-set">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="log-in box">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="wel-com-tag">Login</div>
            <div class="form-group login">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your Email" %>
            </div>
            <div class="form-group password">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your Password" %>
            </div>
            <div class="form-group">
              <a class="password-go" href="#">Forgot Password?</a>
            </div>
            <div class="form-group">
              <div class="submit-btn">
                <%= f.submit "Submit", class: "btn btn-default" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
