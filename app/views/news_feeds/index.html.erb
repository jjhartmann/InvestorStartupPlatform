
<h1>News Feeds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_feeds.each do |news_feed| %>
      <tr>
        <td><%= news_feed.title %></td>
        <td><%= news_feed.description %></td>
        <td><%= link_to 'Show', news_feed %></td>
        <td><%= link_to 'Edit', edit_news_feed_path(news_feed) %></td>
        <td><%= link_to 'Destroy', news_feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Feed', new_news_feed_path %>
