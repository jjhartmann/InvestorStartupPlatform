<h1>Meeting Room Messages</h1>

<table>
  <thead>
    <tr>
      <th>Meeting room</th>
      <th>Meeting member</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meeting_room_messages.each do |meeting_room_message| %>
      <tr>
        <td><%= meeting_room_message.meeting_room %></td>
        <td><%= meeting_room_message.meeting_member %></td>
        <td><%= meeting_room_message.message %></td>
        <td><%= link_to 'Show', meeting_room_message %></td>
        <td><%= link_to 'Edit', edit_meeting_room_message_path(meeting_room_message) %></td>
        <td><%= link_to 'Destroy', meeting_room_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

