<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :offer_title %>
    <%= f.input :text %>
    <%= f.input :description %>
    <%= f.input :amount_to_offer %>
    <%= f.association :proposal, label_method: :pitch, prompt: "Choose a Proposal"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
