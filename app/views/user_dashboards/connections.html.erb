<%= content_for :body_class, "dashbord" %>
<%= render partial: "user_dashboards/sidebar" %>
<p id="notice"><%= notice %></p>
<div class="container side-deatail">
  <div class="col-xs-12">
    <div class="profile-tabs test">
      <div class="tab-pane fade editable-contact-info edit-mode-disabled active in">
        <div class="tab-title">Connections</div>
        <div class="pull-right" style="margin-top:5px; margin-bottom:5px">
          <%#= link_to 'New Enterprise', new_enterprise_path, class: "btn btn-primary" %>
        </div>
        <div class="enterprise-deatils box-tab">
          <% if @connected_users.count != 0 %>
          <ul class="full-details clearfix">
            <li><div class="name-enetrprise head-box">Name</div><div class="destory head-box">Destory</div></li>
            <% @connected_users.each do |connection| %>
              <li id="<%= connection.id%>">
                <div class="name-enetrprise">
                  <%= link_to connection.name,  user_profile_path(id: current_user.id,connection_profile: connection.id), 'data-id': "#{connection.id}" %>
                </div>
                <div class="destory">
                  <a href="#">
                    <i aria-hidden="true" class="fa fa-trash"></i>
                  </a>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  <%= link_to '<i class="fa fa-comments" aria-hidden="true"></i>'.html_safe, "#messageModal", 'data-toggle': "modal" %>
                </div>
              </li>
              <% end %>
          </ul>
          <% else %>
            Sorry!!! You have no connection.
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div id="messageModal" class="modal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <%= form_for @message,url: messages_path do |f|%>
      <div class="modal-body">
        <%= f.hidden_field :target_id %>
        <%= f.hidden_field :user_id,value: current_user.id %>
        <div class="message-tab">
          <div class="head-tab">Shantilal matariya</div>
        </div>
        <div class="form-inputs">
          <%= f.text_area :content, class: "form-control", placeholder: "Write a message to abc" %>
        </div>

        <%#= render partial: "messages/form" %>
      </div>
      <div class="modal-footer">
        <div class="terminals">
          <div class="btn-yes-no">
            <%= f.submit "Send",class: "remodal-confirm btn btn-green" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>
