<%= content_for :body_class, "dashbord" %>
<%= render partial: "user_dashboards/sidebar" %>
<p id="notice"><%= notice %></p>
<div class="container side-deatail">
  <div class="col-xs-12">
    <div class="profile-tabs test">
      <div class="tab-pane fade editable-contact-info edit-mode-disabled active in">
        <div class="tab-title">Connections</div>
        <div class="pull-right" style="margin-top:5px; margin-bottom:5px">
          <%#= link_to 'New Enterprise', new_enterprise_path, class: "btn btn-primary" %>
        </div>
        <div class="enterprise-deatils box-tab">
          <% if @connected_users.count != 0 %>
            <% @connected_users.each do |user| %>
              <div class="user-follow">
                <ul class="clearfix">
                  <li>
                    <div class="tag-1">
                      <div class="follow-pro">
                        <div class="pic-user"><%= image_tag user.photo_avatar %></div>
                      </div>
                    </div>
                    <div class="tag-2">
                      <h3><%= user.name %></h3>
                      <div class="tag-line-pro">Developer, Gujarat Housing Board</div>
                    </div>
                    <div class="tag-3">
                      <div class="action-tag">
                        <ul class="menu cf">
                          <li>
                            <a href="#">More Action <i aria-hidden="true" class="fa fa-chevron-circle-down"></i></a>
                            <ul class="submenu">
                              <li><%= link_to @user.is_following?(user) ? "Following" : "Follow", "#", class: "btn btn-primary follow", "data-id": "#{user.id}", "data-type": "#{user.profilable_type}" %></li>
                              <li><%= link_to "Message", "#messageModal", 'data-toggle': "modal" %></li>
                            </ul>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            <% end %>
          <% else %>
            Sorry!!! You have no connection.
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div id="messageModal" class="modal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <%= form_for @message,url: messages_path do |f|%>
      <div class="modal-body">
        <%= f.hidden_field :target_id %>
        <%= f.hidden_field :user_id,value: current_user.id %>
        <div class="message-tab">
          <div class="head-tab">Shantilal matariya</div>
        </div>
        <div class="form-inputs">
          <%= f.text_area :content, class: "form-control", placeholder: "Write a message to abc" %>
        </div>

        <%#= render partial: "messages/form" %>
      </div>
      <div class="modal-footer">
        <div class="terminals">
          <div class="btn-yes-no">
            <%= f.submit "Send",class: "remodal-confirm btn btn-green" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>
