<!--profile-->
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="short-profile">
        <ul>
          <li>
            <%= link_to user_profile_path(current_user.id), class: "view" do %>
              <div class="main-profile"><div class="go-top-tag"></div><%= image_tag current_user.photo_profile %></div>
              <div class="user-name-short"><%= current_user.name %></div>
              <div class="view">View Your Profile</div>
            <% end %>
          </li>
          <li>
            <%= link_to connections_user_dashboards_path do %>
            <div class="main-profile"><i aria-hidden="true" class="fa fa-plug"></i></div>
            <div class="tag-count connection"><%= current_user.connection_counts(current_user.target_followed.where(target_type: "User").pluck(:target_id),current_user) %></div>
            <div class="tag-name"><%= "Connection".pluralize(current_user.connection_counts(current_user.target_followed.where(target_type: "User").pluck(:target_id),current_user)) %>
            </div>
            <% end %>
          </li>
          <li><a href="#"><div class="main-profile"><i aria-hidden="true" class="fa fa-eye"></i></div><div class="tag-count">5 People</div><div class="tag-name">Visited your profile</div></a></li>
          <li>
            <%= link_to network_user_dashboards_path do %>
            <div class="main-profile">
              <i class="fa fa-rss" aria-hidden="true"></i>
            </div>
            <div class="tag-count network">
              <%= @user.followers.count %> <%= "Person".pluralize(@user.followers.count) %>                
              <% current_user.network_counts(current_user.target_followed.pluck(:target_id),current_user) %> &nbsp; <% "Person".pluralize(current_user.network_counts(current_user.target_followed.pluck(:target_id),current_user)) %>
            </div>
            <div class="tag-name">In your network</div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!--/profile-->
