<%= content_for :body_class, "dashbord" %>

<%= render "/user_dashboards/profile" %>
  <div class="main-body">
      <div class="container side-deatail">
        <div class="col-xs-3">
          <%= render "/user_dashboards/sidebar" %>
        </div>
        <div class="col-xs-9">
          <div class="profile-tabs">
            <div class="tab-content">
              <div class="tab-pane fade in active">
                  <% if @visitors.present? %>
                    <div class="enterprise-deatils box-tab  edit-offer">
                      <ul class="full-details clearfix">
                        <% @visitors.each do |visitee| %>
                        <li>
                          <% if visitee.visitor.profilable_type == "UserProfile" %>
                            <%= render "global_partials/user_profile_plug", user: visitee.visitor %>
                          <% else %>
                            <%= render "global_partials/investor_profile_plug", investor: visitee.visitor %>
                          <% end %>
                        </li>
                        <% end %>
                      </ul>
                    </div>
                    <div class="text-center">
                      <%= will_paginate @visitors %>
                    </div>
                  <% else %>
                    <div class="notes-alert">
                      <div class="alert alert-warning">
                        You are not being followed by anyone at the moment.
                      </div>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
