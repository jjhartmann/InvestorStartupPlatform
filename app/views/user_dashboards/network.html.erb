<%= content_for :body_class, "dashbord" %>

<%= render "/user_dashboards/profile" %>
  <div class="main-body">
    <%= render "/user_dashboards/sidebar" %>
      <div class="container side-deatail">
        <div class="col-xs-12">
          <div class="profile-tabs">
            <div class="tab-content">
              <div class="tab-pane fade in active">
                <div class="tab-title">People in Your Network</div>
                  <% if @followers.present? %>
                  <div class="enterprise-deatils box-tab  edit-offer">
                    <ul class="full-details clearfix">
                      <% @followers.each do |follower| %>
                        <%= link_to user_profile_path(id: current_user.id, follower_profile: follower.id), 'data-id': "#{follower.id}" do %>
                          <li>
                            <div class="tag-1">
                              <div class="follow-pro">
                                <div class="pic-user"><%= image_tag follower.photo_avatar %></div>
                              </div>
                            </div>
                            <div class="tag-2">
                              <h3><%= follower.name %></h3>
                              <div class="tag-line-pro">Developer, Gujarat Housing Board</div>
                            </div>
                            <div class="tag-3">
                              <div class="action-tag">
                                <ul class="menu cf">
                                  <li>
                                    <a href="#">More Action <i aria-hidden="true" class="fa fa-chevron-circle-down"></i></a>
                                    <ul class="submenu">
                                      <li><%= link_to @user.is_following?(follower) ? "Following" : "Follow", "#", class: "follow", "data-id": "#{follower.id}", "data-type": "#{follower.profilable_type}" %></li>
                                      <li><%= link_to "Message", "#messageModal", 'data-toggle': "modal", class: "message_modal", 'data-id': "#{follower.id}", 'data-name': "#{follower.name}" %></li>
                                    </ul>
                                  </li>
                                </ul>
                              </div>
                            </div>
                          </li>
                        <% end %>
                      <% end %>
                    </ul>
                  </div>
                  <% else %>
                  <div class="notes-alert">
                    <div class="alert alert-warning">
                      You are not being followed by anyone at the moment.
                    </div>
                  </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
